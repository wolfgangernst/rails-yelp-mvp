
<div class="container">
<h1> <%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<br>

<h3>Review for <%= @restaurant.name %></h3>
<p><% @restaurant.reviews.each do |review| %></p>
<p>Rating: <%= review.rating %></p>
<p><%= review.content %></p>
<% end %>

<p><%= link_to "Edit this restaurant", edit_restaurant_path %></p>
<p><%= link_to "Back to Overview", restaurants_path %></p>
</div>
