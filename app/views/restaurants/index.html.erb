
<h1>All Restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li><%= link_to restaurant.name, restaurant_path(restaurant[:id]) %>
      <%= link_to "Delete", restaurant_path(restaurant),
          method: :delete,
          data: { confirm: "Delete #{restaurant.name}?" } %>
  </li>
  <% end %>
</ul>

<p><%= link_to "Create a new restaurant", new_restaurant_path %></p>
